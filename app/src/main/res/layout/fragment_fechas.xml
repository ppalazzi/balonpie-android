<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.palazzisoft.ligabalonpie.fragment.FechasFragment">

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:id="@+id/tableRowTitulo"
            android:layout_width="12dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/link_signup"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:textColor="#264301"
                android:textStyle="normal|bold"
                android:text="@string/fechas_totilo"
                android:textSize="16dip" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#82b21e">

            <TextView
                android:id="@+id/fechas_local"
                android:layout_weight="1"
                android:text="@string/fechas_local"
                android:textStyle="normal|bold"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_gravity="center_vertical"
                android:textSize="16dip" />

            <TextView
                android:id="@+id/fechas_local_gol"
                android:layout_weight="1"
                android:text="@string/fechas_local"
                android:textStyle="normal|bold"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_gravity="center_vertical"
                android:textSize="16dip" />


            <TextView
                android:id="@+id/fechas_local_label"
                android:layout_weight="1"
                android:text="@string/fechas_versus_label"
                android:textStyle="normal|bold"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_gravity="center_vertical"
                android:textSize="16dip" />

            <TextView
                android:id="@+id/fechas_visitante"
                android:layout_weight="1"
                android:text="@string/fechas_visitante"
                android:textStyle="normal|bold"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_gravity="center_vertical"
                android:textSize="16dip" />

            <TextView
                android:id="@+id/fechas_visitante_gol"
                android:layout_weight="1"
                android:text="@string/fechas_visitante"
                android:textStyle="normal|bold"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_gravity="center_vertical"
                android:textSize="16dip" />
        </TableRow>

        <!-- Row 1 -->
        <TableRow
            android:layout_height="wrap_content"
            android:id="@+id/tableRowRow1"
            android:layout_weight="1"
            android:background="#d6f58e"
            android:layout_width="match_parent">

            <TextView
                android:id="@+id/localEquipo"
                android:layout_weight="1"
                android:textStyle="normal|bold"
                android:layout_gravity="center_vertical"
                android:textColor="#264301"
                android:textSize="16dip" />

            <TextView
                android:id="@+id/golLocValue"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:textColor="#264301"
                android:textSize="16dip" />

            <TextView
                android:id="@+id/vs1"
                android:layout_weight="1"
                android:textSize="16dip"
                android:layout_gravity="center_vertical"
                android:textStyle="normal|bold"/>

            <TextView
                android:id="@+id/visitanteEquipo"
                android:layout_weight="1"
                android:textStyle="normal|bold"
                android:layout_gravity="center_vertical"
                android:textColor="#264301"
                android:textSize="16dip" />

